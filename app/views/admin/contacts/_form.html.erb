<% @contact.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<fieldset>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :phone_number %>
  <%= form.phone_field :phone_number, required: 'required', pattern: "(\\+351|00351)?\\d{9}", title: t('admin.contacts.validations.phone_number') %>

  <%= label_tag :groups %>
  <%= text_field_tag :groups %>
</fieldset>
