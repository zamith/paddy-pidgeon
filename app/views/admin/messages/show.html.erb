<h1><%= t('admin.messages.show.title') %></h1>

<ul class='details'>
  <li><span class='label'><%= t('admin.messages.fields.text') %></span><p><%= @message.text %></p></li>
  <li>
  <% if @message.deliver_date %>
    <span class='label'><%= t('admin.messages.fields.deliver_date') %></span>
    <span><%= @message.deliver_date.strftime("%d %B %Y") %></span>
  <% end %>
  </li>
  <li>
    <span class='label'><%= t('admin.messages.fields.group') %></span>
    <span><%= @message.group.name if @message.group %></span>
  </li>
</ul>

<div class='actions'>
  <%= link_to t('admin.actions.edit'), edit_admin_message_path(@message), class: 'button' %>
  <%= link_to t('admin.actions.back'), admin_messages_path %>
</div>
