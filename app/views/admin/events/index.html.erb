<h1><%= t('admin.events.index.title') %></h1>

<div class="actions">
  <%= link_to t('admin.events.new.title'), new_admin_event_path, class: 'button' %>
  <%= link_to t('admin.actions.back'), root_path %>
</div>

<table class='list'>
  <thead>
    <tr>
      <th><%= t('admin.events.fields.name') %></th>
      <th><%= t('admin.events.fields.start_date') %></th>
      <th><%= t('admin.events.fields.end_date') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, admin_event_path(event) %></td>
        <td><%= (event.start_date) ? event.start_date.strftime("%d %B %Y") : t('admin.events.fields.no_date') %></td>
        <td><%= (event.end_date) ? event.end_date.strftime("%d %B %Y") : t('admin.events.fields.no_date') %></td>
        <td><i class='icon-pencil'></i><%= link_to t('admin.actions.edit'), edit_admin_event_path(event) %><i class='icon-trash'></i><%= link_to t('admin.actions.delete'), admin_event_path(event), confirm: t('admin.actions.confirm'), :method => :delete, class: 'danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @events %>