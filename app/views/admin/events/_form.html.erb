<fieldset>
  <%= form.label :name %>
  <%= form.text_field :name, required: 'required' %>

  <%= form.label :start_date %>
  <%= form.date_select :start_date, 
        start_year: Time.now.year, 
        end_year: Time.now.year + 1, 
        include_blank: true,
        order: [:day, :month, :year] %>

  <%= form.label :end_date %>
  <%= form.date_select :end_date, 
        start_year: Time.now.year, 
        end_year: Time.now.year + 1, 
        include_blank: true,
        order: [:day, :month, :year] %>
</fieldset>
